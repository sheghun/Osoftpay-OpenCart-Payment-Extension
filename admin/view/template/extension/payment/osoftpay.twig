{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-payment" data-toggle="tooltip" title="{{button_save}}" class="btn btn-primary">
                    <i class="fa fa-save"></i>
                </button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default">
                <i class="fa fa-reply"></i>
                </a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {%endfor%}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible">
                <i class="fa fa-exclamation-circle"></i>
                {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;
                </button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="fa fa-pencil"></i>
                    {{ text_edit }}
                </h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">

                    <!-- Merchant ID Input -->
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-merchant">
                            {{ entry_mercid }}
                        </label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_osoftpay_mercid" value="{{ payment_osoftpay_mercid }}"
                            placeholder="{{ entry_mercid }}"
                            id="input-merchant" class="form-control" />
                            {% if error_mercid %}
                                <div class="text-danger">
                                    {{ error_mercid }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <!-- End Merchant ID Input -->

                    <!-- PaymentItemName Input -->
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-vendor">
                            {{ entry_paymentItemName }}
                        </label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_osoftpay_paymentItemName" value="{{ payment_osoftpay_paymentItemName }}" placeholder="{{ entry_paymentItemName }}" id="input-servicetypeid"
                            class="form-control"/>
                            {% if error_paymentItemName %}
                                <div class="text-danger">
                                    {{ error_paymentItemName }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <!-- End PaymentItemName Input -->

                    <!-- Total Input -->
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-total">
                            <span data-toggle="tooltip" title="{{ help_total }}">
                                {{ entry_total }}
                            </span>
                        </label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_osoftpay_total" value="{{ payment_osoftpay_total }}" placeholder="{{ entry_total }}" id="input-total" class="form-control"/>
                        </div>
                    </div>
                    <!-- End Total Input -->

                    <!-- Test Input -->
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-test">
                            {{ entry_test }}
                        </label>
                        <div class="col-sm-10">
                            <select name="payment_osoftpay_mode" id="input-test" class="form-control">
                                {% if payment_osoftpay_mode == 'test' %}
                                    <option value="test" selected="selected">
                                        {{ text_test }}
                                    </option>
                                {% else %}
                                    <option value="test">
                                        {{ text_test }}
                                    </option>
                                {% endif %}
                                {% if payment_osoftpay_mode == 'live' %}
                                    <option value="live" selected="selected">
                                        {{ text_live }}
                                    </option>
                                {% else %}
                                    <option value="live">
                                        {{ text_live }}
                                    </option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                    <!-- End Test Input -->

                    <!-- Order Status Input -->
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-order-status">
                            {{ entry_order_status }}
                        </label>
                        <div class="col-sm-10">
                            <select name="payment_osoftpay_order_status_id" id="input-order-status" class="form-control">
                                {%  for order_status in order_statuses %}
                                    {% if order_status.order_status_id == paymet_osoftpay_order_status_id %}
                                        <option value="{{ order_status.order_status_id }}" selected="selected">
                                            {{ order_status.name }}
                                        </option>
                                    {% else %}
                                        <option value="{{ order_status.order_status_id }}">
                                            {{ order_status.name }}
                                        </option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <!-- End Order Status Input -->

                    <!-- Input Geo Zone -->
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-geo-zone">
                            {{ entry_geo_zone }}
                        </label>
                        <div class="col-sm-10">
                            <select name="payment_osoftpay_zone_id" id="input-geo-zone" class="form-control">
                                <option value="0">
                                    {{ text_all_zones }}
                                </option>
                                {% for geo_zone in geo_zones %}
                                    {% if geo_zone.geo_zone_id == payment_osoftpay_geo_zone_id %}
                                        <option value="{{ geo_zone.geo_zone_id }}" selected="selected">
                                            {{ geo_zone.name }}
                                    </option>
                                    {% else %}
                                        <option value="{{ geo_zone.geo_zone_id }}">
                                            {{ geo_zone.name }}
                                        </option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <!-- End Geo Zone -->

                    <!-- Input Status -->
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-status">
                                {{ entry_status }}
                            </label>
                            <div class="col-sm-10">
                                <select name="payment_osoftpay_status" id="input-status" class="form-control">
                                    {% if payment_osoftpay_status %}
                                        <option value="1" selected="selected">
                                            {{ text_enabled }}
                                        </option>
                                        <option value="0">
                                            {{ text_disabled }}
                                        </option>
                                    {% else %}
                                        <option value="1">
                                            {{ text_enabled }}
                                        </option>
                                        <option value="0" selected="selected">
                                            {{ text_disabled }}
                                        </option>
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                    <!-- End Input Status -->

                    <!-- Input Sort -->
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-sort-order">
                                {{ entry_sort_order }}
                            </label>
                            <div class="col-sm-10">
                                <input type="text" name="payment_osoftpay_sort_order" value="{{ payment_remita_sort_order }}" placeholder="{{ entry_sort_order }}"
                                id="input-sort-order" class="form-control" />
                            </div>
                        </div>
                    <!-- End Input Sort -->

                    <!-- Input Notification Url -->
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-sort-order">
                            <span data-toggle="tooltip" title=" {{ help_ipn }}">
                                {{ entry_notification_url }}
                            </span>
                        </label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_osoftpay_notification_url" readonly value="{{ payment_osoftpay_notification_url }}" placeholder="{{ entry_notification_url }}" id="input-sort-order" class="form-control" />
                        </div>
                    </div>
                    <!-- End Input Notification Url -->
                </form>
            </div>
        </div>
        <a href="developer.osoftpay.net"><small>developer.osoftpay.net</small></a>
    </div>
</div>
{{ footer }}